@model IEnumerable<Game>

@{
    ViewData["Title"] = "Home Page";
}

@if (!Model.Any())
{
    <div class="alert alert-dismissible alert-warning">
        <h4 class="alert-heading">No Game!</h4>
        <p class="mb-0">No Game added yet !</p>
    </div>
}
else
{
    <div class="row mt-5">
    @foreach (var item in Model)
    {
        <div class="col-lg-4 col-md-6" >
                <a class="card border-danger mb-3  text-decoration-none" asp-action="Detail" asp-controller="games" asp-route-id="@item.Id">
                <div class="card-body" style="background-image:url('@Url.Content($"/assets/uploaded images/games/{item.Cover}")'); background-size: cover; background-position:center; height:350px">
                    <div class="d-flex align-items-end h-100">
                        <span class="badge bg-secondary rounded-0 fs-3">@item.Category?.Name</span>
                    </div>
                </div>
              <div class="card-footer text-muted d-flex justify-content-between align-items-center">
                  <h5>@item.Name</h5>
                  <div>
                      @foreach (var gameDevice in item.Devices)
                        {
                            <i class="@gameDevice.Device.Icon me-2 fs-4"></i>
                        }
                  </div>
              </div>
            </a>

        </div>
        
    }
    </div>
}

